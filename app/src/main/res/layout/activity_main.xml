<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chris.utils.AppLauncher.activity.MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_desc" />
    
    <Button
        android:id="@+id/btnCancelAndExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_cancel_exit"
        android:layout_margin="5dp"
        />
    
    <Button
        android:id="@+id/btnShowList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_show_applist"
        android:layout_margin="5dp"
        />
    
    <Button
        android:id="@+id/btnBeginLaunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_begin_launch"
        android:layout_margin="5dp"
        />

</LinearLayout>
